<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:id="@+id/detail_fragment"
        tools:context=".ui.property.browse.detail.DetailFragment">

        <TextView
            android:id="@+id/label_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media"
            android:textSize="19sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_gravity="start"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pictures_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/layout_picture_list_item" />

        <TextView
            android:id="@+id/label_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="19sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:textStyle="normal"
            android:layout_margin="8dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/infos_constraint_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_surface"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/guideline">

                            <ImageView
                                android:id="@+id/image_surface"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                app:layout_constraintBaseline_toBaselineOf="@id/label_surface"
                                android:src="@drawable/ic_baseline_settings_overscan_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:contentDescription="@string/none" />

                            <TextView
                                android:id="@+id/label_surface"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="bottom"
                                android:text="@string/surface"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/image_surface"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.90999997" />

                            <TextView
                                android:id="@+id/surface"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/none"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="@id/label_surface"
                                app:layout_constraintTop_toBottomOf="@id/label_surface" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_rooms"
                            android:layout_marginTop="16dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_surface"
                            app:layout_constraintEnd_toStartOf="@id/guideline">

                            <ImageView
                                android:id="@+id/image_rooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                app:layout_constraintBaseline_toBaselineOf="@id/label_rooms"
                                android:src="@drawable/ic_baseline_home_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:contentDescription="@string/none" />

                            <TextView
                                android:id="@+id/label_rooms"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="bottom"
                                android:text="@string/number_of_rooms"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/image_rooms"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.90999997" />

                            <TextView
                                android:id="@+id/rooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/none"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="@id/label_rooms"
                                app:layout_constraintTop_toBottomOf="@id/label_rooms" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_bathrooms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_rooms"
                            app:layout_constraintEnd_toStartOf="@id/guideline"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/image_bathrooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                app:layout_constraintBaseline_toBaselineOf="@id/label_bathrooms"
                                android:src="@drawable/ic_baseline_hot_tub_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:contentDescription="@string/none" />

                            <TextView
                                android:id="@+id/label_bathrooms"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="bottom"
                                android:text="@string/number_of_bathrooms"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/image_bathrooms"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.90999997" />

                            <TextView
                                android:id="@+id/bathrooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/none"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="@id/label_bathrooms"
                                app:layout_constraintTop_toBottomOf="@id/label_bathrooms" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_bedrooms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_bathrooms"
                            app:layout_constraintEnd_toStartOf="@id/guideline"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/image_bedrooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                app:layout_constraintBaseline_toBaselineOf="@id/label_bedrooms"
                                android:src="@drawable/ic_baseline_hotel_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:contentDescription="@string/none" />

                            <TextView
                                android:id="@+id/label_bedrooms"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="bottom"
                                android:text="@string/number_of_bedrooms"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/image_bedrooms"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.90999997" />

                            <TextView
                                android:id="@+id/bedrooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/none"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="@id/label_bedrooms"
                                app:layout_constraintTop_toBottomOf="@id/label_bedrooms" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@id/guideline"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <ImageView
                                android:id="@+id/image_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                app:layout_constraintBaseline_toBaselineOf="@id/label_location"
                                android:src="@drawable/ic_baseline_place_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:contentDescription="@string/none" />

                            <TextView
                                android:id="@+id/label_location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="bottom"
                                android:text="@string/location"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/image_location"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.90999997" />

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/none"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                app:layout_constraintEnd_toEndOf="@id/label_location"
                                app:layout_constraintStart_toStartOf="@id/label_location"
                                app:layout_constraintTop_toBottomOf="@id/label_location" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/map_constraint_layout"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="16dp"
                        app:layout_constraintDimensionRatio="H,1:1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/infos_constraint_layout">

                        <fragment
                            android:id="@+id/map_detail_fragment"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/property_address_street"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="Detail Fragment" />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/real_estate_master_navigation"
    app:startDestination="@id/navigation_list">

    <browse_master_fragment
        android:id="@+id/navigation_list"
        android:name="com.openclassrooms.realestatemanager.ui.property.browse.list.PropertyListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_list">

        <action android:id="@+id/navigation_map_action"
            app:destination="@id/navigation_map"
            app:popUpTo="@id/navigation_list"/>

        <action android:id="@+id/navigation_detail_action"
            app:destination="@id/navigation_detail"
            app:popUpTo="@id/navigation_list" />

    </browse_master_fragment>

    <browse_master_fragment
        android:id="@+id/navigation_map"
        android:name="com.openclassrooms.realestatemanager.ui.property.browse.map.PropertyMapFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_map" >

        <action android:id="@+id/navigation_list_action"
            app:destination="@id/navigation_list"
            app:popUpTo="@id/navigation_map"/>

        <action android:id="@+id/navigation_detail_action"
            app:destination="@id/navigation_detail"
            app:popUpTo="@id/navigation_map"/>
    </browse_master_fragment>

    <browse_master_fragment
        android:id="@+id/navigation_detail"
        android:name="com.openclassrooms.realestatemanager.ui.property.browse.detail.PropertyDetailFragment"
        android:label="@string/detail"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="from"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <argument
            android:name="propertyId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </browse_master_fragment>
</navigation>
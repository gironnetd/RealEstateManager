<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/real_estate_navigation"
    app:startDestination="@id/navigation_list">

    <keep_state_fragment
        android:id="@+id/navigation_list"
        android:name="com.openclassrooms.realestatemanager.ui.property.browse.list.PropertyListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_list" />

    <keep_state_fragment
        android:id="@+id/navigation_detail"
        android:name="com.openclassrooms.realestatemanager.ui.property.browse.detail.PropertyDetailFragment"
        android:label="@string/detail"
        tools:layout="@layout/fragment_detail" />

    <keep_state_fragment
        android:id="@+id/navigation_map"
        android:name="com.openclassrooms.realestatemanager.ui.property.browse.map.PropertyMapFragment"
        android:label="@string/map"
        tools:layout="@layout/fragment_map" />
</navigation>